<body>

  <div class="card">
    <h1>WA Entry Points</h1>

    <button onclick="openWA('sales')">
      Sales Flow
    </button>

    <button onclick="openWA('support')">
      Support Flow
    </button>

    <button onclick="openWA('collections')">
      Collections Flow
    </button>
  </div>

  <script>
    const phone = "521XXXXXXXXXX"; // TU NÃšMERO DE WHATSAPP BUSINESS

    function openWA(flow) {
      let text = "";

      if (flow === "sales") {
        text = "ENTRY_SALES";
      } else if (flow === "support") {
        text = "ENTRY_SUPPORT";
      } else if (flow === "collections") {
        text = "ENTRY_COLLECTIONS";
      }

      const url = `https://wa.me/${phone}?text=${encodeURIComponent(text)}`;
      window.open(url, "_blank");
    }
  </script>

